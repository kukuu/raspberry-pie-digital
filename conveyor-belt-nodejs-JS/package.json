{
  "name": "conveyor-belt-simulation",
  "version": "1.0.0",
  "description": "Factory conveyor belt simulation with worker coordination and real-time monitoring",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage --runInBand --forceExit",
    "test:unit": "jest test/unit --coverage",
    "test:integration": "jest test/integration --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "metrics": "node ./lib/metrics.js",
    "docker:build": "docker build -t conveyor-belt .",
    "docker:run": "docker run -p 5000:5000 -p 9090:9090 conveyor-belt"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "mock-fs": "^5.5.0",
    "onoff": "^6.0.3",
    "prom-client": "^14.2.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/config/"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "conveyor",
    "simulation",
    "iot",
    "raspberry-pi",
    "prometheus"
  ]
}
